@model IEnumerable<DinhNhatQuynhGiang1.Models.Product>
@{
    ViewData["Title"] = "Home Page";
    int numOfQuantity = 1;
}
<section class="py-5">
    <div class="container-fluid px-4 px-lg-5">
        <div class="row row-cols-1 row-cols-md-3 g-4">
            @foreach (var item in Model)
            {
                    <div class="col">
                        <div class="card h-100 shadow-sm">
                            <img src="@item.ImageUrl" class="card-img-top object-fit-cover" alt="@item.Name" style="height: 300px;">
                            <div class="card-body d-flex flex-column">
                                <h5 class="card-title mb-3">@Html.DisplayFor(modelItem => item.Name)</h5>
                                <div class="d-flex align-items-center mb-3">
                                    <span class="me-2">Price:</span>
                                    <p class="card-text fw-bold">@item.Price.ToString("#,##0")$</p>
                                </div>
                                <a asp-controller="ShoppingCart" 
                                   asp-action="AddToCart" 
                                   asp-route-productId="@item.Id" 
                                   asp-route-quantity="@numOfQuantity" 
                                   class="mt-auto">
                                    <button class="btn btn-outline-dark w-100">
                                        <i class="bi-cart-fill me-1"></i> Add to Cart
                                    </button>
                                </a>
                            </div>
                        </div>
                    </div>
            }
        </div>
    </div>
</section>