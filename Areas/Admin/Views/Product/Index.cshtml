@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model IEnumerable<DinhNhatQuynhGiang1.Models.Product>
<div class="container py-3">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="fw-bold text-primary">Products</h2>
        <a asp-action="Add" class="btn btn-primary shadow-sm">
            <i class="fas fa-plus"></i> Add Product
        </a>
    </div>

    <div class="card shadow-sm border-0 rounded-3">
        <div class="table-responsive">
            <table class="table table-hover mb-0">
                <thead>
                    <tr>
                        <th class="px-3 py-2 text-nowrap">Name</th>
                        <th class="px-3 py-2 text-nowrap">Price</th>
                        <th class="px-3 py-2">Description</th>
                        <th class="px-3 py-2 text-nowrap">Category</th>
                        <th class="px-3 py-2 text-center">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var product in Model)
                    {
                            <tr class="align-middle">
                                <td class="px-3 py-2 fw-medium">@product.Name</td>
                                <td class="px-3 py-2">$@product.Price.ToString("#,##0.00")</td>
                                <td class="px-3 py-2 description-cell">@product.Description</td>
                                <td class="px-3 py-2">@(product.Category?.Name ?? "No Category")</td>
                                <td class="px-3 py-2 text-center">
                                    <div class="action-buttons">
                                        <a asp-action="Display" asp-route-id="@product.Id" class="btn btn-sm btn-action btn-view">
                                            <i class="fas fa-eye"></i> View
                                        </a>
                                        <a asp-action="Update" asp-route-id="@product.Id" class="btn btn-sm btn-action btn-edit mx-1">
                                            <i class="fas fa-edit"></i> Edit
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@product.Id" class="btn btn-sm btn-action btn-delete">
                                            <i class="fas fa-trash"></i> Delete
                                        </a>
                                    </div>
                                </td>
                            </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
<style>
    :root {
        --primary-color: #1a5ba8;
        --primary-light: #2a6ab7;
        --view-color: #02a7c7;
        --edit-color: #fea811;
        --delete-color: #e63946;
        --border-color: #e9ecef;
        --hover-bg: rgba(26, 91, 168, 0.05);
    }

    /* Base styles */
    body {
        background-color: #f8f9fa;
    }

    .container {
        max-width: 1200px;
    }

    /* Table styling */
    .table {
        width: 100%;
        border-collapse: collapse;
        margin-bottom: 0;
        background-color: #fff;
        font-size: 0.9rem;
    }

    .table thead th {
        background-color: #f1f5fa;
        color: var(--primary-color);
        font-weight: 600;
        border-top: none;
        border-bottom: 2px solid var(--primary-color);
        text-transform: uppercase;
        font-size: 0.75rem;
        letter-spacing: 0.5px;
    }

    .table tbody td {
        vertical-align: middle;
        border-color: var(--border-color);
    }

    .table tbody tr:hover {
        background-color: var(--hover-bg);
    }

    /* Make description cell truncate with ellipsis */
    .description-cell {
        max-width: 200px;
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
    }

    /* Card styling */
    .card {
        overflow: hidden;
        transition: all 0.2s;
    }

    /* Button styling */
    .btn {
        border-radius: 4px;
        font-weight: 500;
        transition: all 0.2s ease;
        border: none;
    }

    .btn-primary {
        background-color: var(--primary-color);
        color: white;
    }

    .btn-primary:hover {
        background-color: var(--primary-light);
    }

    .btn-sm {
        padding: 0.25rem 0.5rem;
        font-size: 0.75rem;
    }

    .btn-action {
        display: inline-block;
    }

    .btn-view {
        background-color: var(--view-color);
        color: white;
    }

    .btn-view:hover {
        background-color: #0295b2;
        color: white;
    }

    .btn-edit {
        background-color: var(--edit-color);
        color: white;
    }

    .btn-edit:hover {
        background-color: #e69a10;
        color: white;
    }

    .btn-delete {
        background-color: var(--delete-color);
        color: white;
    }

    .btn-delete:hover {
        background-color: #d82f3c;
        color: white;
    }

    /* Typography */
    h2.text-primary {
        color: var(--primary-color);
        font-size: 1.5rem;
        position: relative;
    }

    h2.text-primary::after {
        content: "";
        position: absolute;
        bottom: -8px;
        left: 0;
        width: 50px;
        height: 3px;
        background-color: var(--primary-color);
        border-radius: 3px;
    }

    .fw-medium {
        font-weight: 500;
    }

    /* Icon styling */
    .fas {
        margin-right: 3px;
    }

    /* Action buttons section */
    .action-buttons {
        white-space: nowrap;
    }
</style>
<!-- Add Font Awesome for icons -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">